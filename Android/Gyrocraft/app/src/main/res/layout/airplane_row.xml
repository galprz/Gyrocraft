<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="10dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/terminator"
        android:id="@+id/airplane_list_image"
        android:adjustViewBounds="true"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/airplane"/>

    <com.technion.gyrocraft.custom_widgets.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Placeholder"
        android:textSize="@dimen/small_text_size"
        android:layout_marginTop="10dp"
        android:textColor="@color/bright_yellow"
        android:id="@+id/airplane_list_name"
        android:textStyle="bold|italic"/>

</LinearLayout>